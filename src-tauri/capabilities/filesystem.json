{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "filesystem-cap",
    "description": "Filesystem access for main window",
    "windows": [
        "main"
    ],
    "permissions": [
        {
            "identifier": "fs:scope",
            "allow": [
                {
                    "path": "$APPDATA"
                },
                {
                    "path": "$APPDATA/**/*"
