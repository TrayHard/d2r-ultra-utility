{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "filesystem-cap",
    "description": "Filesystem access for main window",
    "windows": [
        "main"
    ],
    "permissions": [
        {
            "identifier": "fs:scope",
            "allow": [
                {
                    "path": "$APPDATA"
                },
                {
                    "path": "$APPDATA/**/*"
                },
                {
                    "path": "$HOME/**/*"
                },
                {
                    "path": "C:/**/*"
                },
                {
                    "path": "D:/**/*"
                },
                {
                    "path": "E:/**/*"
                },
                {
                    "path": "F:/**/*"
                }
            ]
        },
        {
            "identifier": "fs:allow-app-write",
            "allow": [
                {
                    "path": "$APPDATA"
                },
                {
                    "path": "$APPDATA/**/*"
                },
                {
                    "path": "$HOME/**/*"
                },
                {
                    "path": "C:/**/*"
                },
                {
                    "path": "D:/**/*"
                },
                {
                    "path": "E:/**/*"
                },
                {
                    "path": "F:/**/*"
                }
            ]
        },
        
        {
            "identifier": "fs:allow-rename",
            "allow": [
                {
                    "path": "$APPDATA"
                },
                {
                    "path": "$APPDATA/**/*"
                },
                {
                    "path": "$HOME/**/*"
                },
                {
                    "path": "C:/**/*"
                },
                {
                    "path": "D:/**/*"
                },
                {
                    "path": "E:/**/*"
                },
                {
                    "path": "F:/**/*"
                }
            ]
        }
    ]
}